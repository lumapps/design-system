    "repository": {
        "type": "git",
        "url": "git+https://github.com/lumapps/design-system.git"
    },
    "scripts": {
        "build": "npm run build:all",
        "prebuild:all": "rm -Rf ./dist/*",
        "build:all": "npm run build:angularjs; npm run build:react",
        "prebuild:angularjs": "rm -Rf ./dist/angularjs/*",
        "build:angularjs": "webpack --config webpack/angularjs/webpack.umd.js && MINIFY=true GENERATE_PACKAGE=true webpack --config webpack/angularjs/webpack.umd.js",
        "postbuild:angularjs": "rm -f ./dist/angularjs/*-theme-*.js*",
        "ngb": "npm run build:angularjs",
        "prebuild:react": "rm -Rf ./dist/react/*",
        "build:react": "webpack --config webpack/react/webpack.umd.js && MINIFY=true GENERATE_PACKAGE=true webpack --config webpack/react/webpack.umd.js",
        "postbuild:react": "rm -f ./dist/react/*-theme-*.js*",
        "rcb": "npm run build:react",
        "prebump:major": "cd src/icons && npm --no-git-tag-version version major && git add package.json && cd -",
        "bump:major": "npm version --force --message 'chore(release): release new major version %s' major",
        "prebump:minor": "cd src/icons && npm --no-git-tag-version version minor && git add package.json && cd -",
        "bump:minor": "npm version --force --message 'chore(release): release new minor version %s' minor",
        "prebump:patch": "cd src/icons && npm --no-git-tag-version version patch && git add package.json && cd -",
        "bump:patch": "npm version --force --message 'chore(release): release new patch version %s' patch",
        "commit": "git-cz",
        "co": "npm run commit",
        "cz": "npm run commit",
        "format": "npm run format:demo && npm run format:src",
        "format:demo": "npm run format:demo:js && npm run format:demo:ts && npm run format:demo:style",
        "format:demo:style": "prettier-stylelint --prettier-last --write \"demo/**/*.{css,scss}\"",
        "format:demo:js": "prettier-eslint --prettier-last --write \"demo/**/*.{js,jsx}\"",
        "format:demo:ts": "prettier-tslint fix \"demo/**/*.{ts,tsx}\"",
        "format:src": "npm run format:src:js && npm run format:src:ts && npm run format:src:style",
        "format:src:style": "prettier-stylelint --prettier-last --write \"src/**/*.{css,scss}\"",
        "format:src:js": "prettier-eslint --prettier-last --write \"src/**/*.{js,jsx}\"",
        "format:src:ts": "prettier-tslint fix \"src/**/*.{ts,tsx}\"",
        "lint": "npm run lint:config; npm run lint:demo; npm run lint:src",
        "lint:config": "npm run lint:config:js",
        "lint:config:js": "eslint \"webpack/**/*.js\"",
        "lint:demo": "npm run lint:demo:js; npm run lint:demo:ts; npm run lint:demo:style",
        "lint:demo:style": "stylelint \"demo/**/*.{css,scss}\"",
        "lint:demo:js": "eslint \"demo/**/*.{js,jsx}\"",
        "lint:demo:ts": "tslint --project tsconfig.json \"demo/**/*.{ts,tsx}\"",
        "lint:src": "npm run lint:src:js; npm run lint:src:ts; npm run lint:src:style",
        "lint:src:style": "stylelint \"src/**/*.{css,scss}\"",
        "lint:src:js": "eslint \"src/**/*.{js,jsx}\"",
        "lint:src:ts": "tslint --project tsconfig.json \"src/**/*.{ts,tsx}\"",
        "postinstall": "patch-package",
        "publish-package": "npm run publish-package:angularjs; npm run publish-package:react",
        "prepublish-package:angularjs": "npm run build:angularjs",
        "publish-package:angularjs": "cd dist/angularjs && npm publish --access=public && cd -",
        "prepublish-package:react": "npm run build:react",
        "publish-package:react": "cd dist/react && npm publish --access=public && cd -",
        "release:major": "npm run bump:major && npm run publish-package",
        "release:minor": "npm run bump:minor && npm run publish-package",
        "release:patch": "npm run bump:patch && npm run publish-package",
        "scaffold": "yarn yo ./yo-generators/generator-lumx-component/generators/app/index.js --with-tests --with-demo",
        "scaffold:component": "yarn yo ./yo-generators/generator-lumx-component/generators/component/index.js",
        "scaffold:tests": "yarn yo ./yo-generators/generator-lumx-component/generators/tests/index.js",
        "setup": "yarn install; cd ./src/icons/; yarn install; cd -",
        "setup:git-hooks": "node node_modules/husky/bin/uninstall.js && node node_modules/husky/bin/install.js",
        "start:angularjs": "nodemon --watch webpack --ignore webpack/react --ignore webpack/.eslintrc.js node_modules/.bin/webpack-dev-server -- --config webpack/angularjs/webpack.dev.js --hot",
        "ng": "npm run start:angularjs",
        "start:react": "nodemon --watch webpack --ignore webpack/angularjs --ignore webpack/.eslintrc.js node_modules/.bin/webpack-dev-server -- --config webpack/react/webpack.dev.js --hot",
        "rc": "npm run start:react",
        "test": "npm run test:angularjs && npm run test:react",
        "test:ci": "npm run test:angularjs:ci && npm run test:react:ci",
        "test:angularjs": "",
        "test:angularjs:ci": "",
        "test:react": "jest --config jest/react/index.js --coverage --notify --passWithNoTests",
        "test:react:changed": "jest --config jest/react/index.js --coverage --notify --passWithNoTests --onlyChanged",
        "test:react:ci": "jest --config jest/react/index.js --coverage --ci",
        "test:react:watch": "jest --config jest/react/index.js --watch --notify --passWithNoTests",
        "test:react:watch:changed": "jest --config jest/react/index.js --watch --notify --passWithNoTests --onlyChanged",
        "webpack": "webpack-dev-server --config webpack/webpack.dev.js",
        "webpack-defaults": "webpack-defaults"
    },
    "version": "0.4.8"
}
