{
    "text-field": {
        "input": {
            "min-height": { "value": "{size.m.value}" },
            "padding": {
                "horizontal": { "value": "{spacing.unit.medium.value}" }
            },
            "border-radius": { "value": "{border-radius.value}" }
        },
        "state-default": {
            "input": {
                "border": {
                    "top": {
                        "width": { "value": "1px" }
                    },
                    "right": {
                        "width": { "value": "1px" }
                    },
                    "bottom": {
                        "width": { "value": "1px" }
                    },
                    "left": {
                        "width": { "value": "1px" }
                    }
                }
            },
            "theme-light": {
                "header": {
                    "label": {
                        "color": { "value": "var(--lumx-color-dark-N)" }
                    }
                },
                "input": {
                    "background-color": { "value": "var(--lumx-color-dark-L6)" },
                    "border-color": { "value": "var(--lumx-color-dark-L4)" },
                    "content": {
                        "color": { "value": "var(--lumx-color-dark-N)" }
                    },
                    "placeholder": {
                        "color": { "value": "var(--lumx-color-dark-L2)" }
                    }
                }
            },
            "theme-dark": {
                "header": {
                    "label": {
                        "color": { "value": "var(--lumx-color-light-N)" }
                    }
                },
                "input": {
                    "background-color": { "value": "var(--lumx-color-light-L6)" },
                    "border-color": { "value": "var(--lumx-color-light-L4)" },
                    "content": {
                        "color": { "value": "var(--lumx-color-light-N)" }
                    },
                    "placeholder": {
                        "color": { "value": "var(--lumx-color-light-L2)" }
                    }
                }
            }
        },
        "state-hover": {
            "input": {
                "border": {
                    "top": {
                        "width": { "value": "1px" }
                    },
                    "right": {
                        "width": { "value": "1px" }
                    },
                    "bottom": {
                        "width": { "value": "1px" }
                    },
                    "left": {
                        "width": { "value": "1px" }
                    }
                }
            },
            "theme-light": {
                "input": {
                    "background-color": { "value": "var(--lumx-color-dark-L5)" },
                    "border-color": { "value": "var(--lumx-color-dark-L4)" },
                    "content": {
                        "color": { "value": "var(--lumx-color-dark-N)" }
                    },
                    "placeholder": {
                        "color": { "value": "var(--lumx-color-dark-L2)" }
                    }
                }
            },
            "theme-dark": {
                "input": {
                    "background-color": { "value": "var(--lumx-color-light-L5)" },
                    "border-color": { "value": "var(--lumx-color-light-L4)" },
                    "content": {
                        "color": { "value": "var(--lumx-color-light-N)" }
                    },
                    "placeholder": {
                        "color": { "value": "var(--lumx-color-light-L2)" }
                    }
                }
            }
        },
        "state-focus": {
            "input": {
                "border": {
                    "top": {
                        "width": { "value": "2px" }
                    },
                    "right": {
                        "width": { "value": "2px" }
                    },
                    "bottom": {
                        "width": { "value": "2px" }
                    },
                    "left": {
                        "width": { "value": "2px" }
                    }
                }
            },
            "theme-light": {
                "header": {
                    "label": {
                        "color": { "value": "var(--lumx-color-dark-N)" }
                    }
                },
                "input": {
                    "background-color": { "value": "var(--lumx-color-light-N)" },
                    "border-color": { "value": "var(--lumx-color-primary-L2)" },
                    "content": {
                        "color": { "value": "var(--lumx-color-dark-N)" }
                    },
                    "placeholder": {
                        "color": { "value": "var(--lumx-color-dark-L2)" }
                    }
                }
            },
            "theme-dark": {
                "header": {
                    "label": {
                        "color": { "value": "var(--lumx-color-light-N)" }
                    }
                },
                "input": {
                    "background-color": { "value": "transparent" },
                    "border-color": { "value": "var(--lumx-color-light-L2)" },
                    "content": {
                        "color": { "value": "var(--lumx-color-light-N)" }
                    },
                    "placeholder": {
                        "color": { "value": "var(--lumx-color-light-L2)" }
                    }
                }
            }
        }
    }
