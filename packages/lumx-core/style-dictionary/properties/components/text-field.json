{
    "text-field": {
        "input": {
            "min-height": "{size.m}",
            "padding": {
                "horizontal": "{spacing.unit.medium}"
            },
            "border-radius": "{border-radius}"
        },
        "state-default": {
            "input": {
                "border": {
                    "top": {
                        "width": { "value": "1px" }
                    },
                    "right": {
                        "width": { "value": "1px" }
                    },
                    "bottom": {
                        "width": { "value": "1px" }
                    },
                    "left": {
                        "width": { "value": "1px" }
                    }
                }
            },
            "theme-light": {
                "header": {
                    "label": {
                        "color": "{color.dark.N}"
                    }
                },
                "input": {
                    "background-color": "{color.dark.L6}",
                    "border-color": "{color.dark.L3}",
                    "content": {
                        "color": "{color.dark.N}"
                    },
                    "placeholder": {
                        "color": "{color.dark.L2}"
                    }
                }
            },
            "theme-dark": {
                "header": {
                    "label": {
                        "color": "{color.light.N}"
                    }
                },
                "input": {
                    "background-color": "{color.light.L6}",
                    "border-color": "{color.light.L4}",
                    "content": {
                        "color": "{color.light.N}"
                    },
                    "placeholder": {
                        "color": "{color.light.L2}"
                    }
                }
            }
        },
        "state-hover": {
            "input": {
                "border": {
                    "top": {
                        "width": { "value": "1px" }
                    },
                    "right": {
                        "width": { "value": "1px" }
                    },
                    "bottom": {
                        "width": { "value": "1px" }
                    },
                    "left": {
                        "width": { "value": "1px" }
                    }
                }
            },
            "theme-light": {
                "header": {
                    "label": {
                        "color": "{color.dark.N}"
                    }
                },
                "input": {
                    "background-color": "{color.dark.L5}",
                    "border-color": "{color.dark.L3}",
                    "content": {
                        "color": "{color.dark.N}"
                    },
                    "placeholder": {
                        "color": "{color.dark.L2}"
                    }
                }
            },
            "theme-dark": {
                "header": {
                    "label": {
                        "color": "{color.light.N}"
                    }
                },
                "input": {
                    "background-color": "{color.light.L5}",
                    "border-color": "{color.light.L4}",
                    "content": {
                        "color": "{color.light.N}"
                    },
                    "placeholder": {
                        "color": "{color.light.L2}"
                    }
                }
            }
        },
        "state-focus": {
            "input": {
                "border": {
                    "top": {
                        "width": { "value": "2px" }
                    },
                    "right": {
                        "width": { "value": "2px" }
                    },
                    "bottom": {
                        "width": { "value": "2px" }
                    },
                    "left": {
                        "width": { "value": "2px" }
                    }
                }
            },
            "theme-light": {
                "header": {
                    "label": {
                        "color": "{color.dark.N}"
                    }
                },
                "input": {
                    "background-color": { "value": "transparent" },
                    "border-color": "{color.primary.N}",
                    "content": {
                        "color": "{color.dark.N}"
                    },
                    "placeholder": {
                        "color": "{color.dark.L2}"
                    }
                }
            },
            "theme-dark": {
                "header": {
                    "label": {
                        "color": "{color.light.N}"
                    }
                },
                "input": {
                    "background-color": { "value": "transparent" },
                    "border-color": "{color.light.N}",
                    "content": {
                        "color": "{color.light.N}"
                    },
                    "placeholder": {
                        "color": "{color.light.L2}"
                    }
                }
            }
        }
    }
}
