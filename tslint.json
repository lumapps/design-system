{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended", "tslint-eslint-rules", "tslint-react", "tslint-config-prettier"],
    "jsRules": {},
    "linterOptions": {
        "exclude": ["**/node_modules/**", "**/src/icons/node_modules/**", "**/*.d.ts", "**/jest/**"]
    },
    "rules": {
        "await-promise": true,
        "deprecation": true,
        "interface-name": false,
        "no-any": false,
        "no-boolean-literal-compare": true,
        "no-console": [
            true,
            "assert",
            "clear",
            "dir",
            "dirxml",
            "groupCollapsed",
            "log",
            "profile",
            "profileEnd",
            "table"
        ],
        "no-empty-interface": false,
        "no-for-in-array": true,
        "no-inferrable-types": [true, "ignore-params", "ignore-properties"],
        "no-inferred-empty-object-type": false,
        "no-object-literal-type-assertion": true,
        "no-return-await": true,
        "no-unsafe-any": false,
        "ordered-imports": [
            true,
            {
                "import-sources-order": "lowercase-last",
                "named-imports-order": "lowercase-last",
                "module-source-path": "full"
            }
        ],
        "object-literal-sort-keys": false,
        "prefer-method-signature": true,
        "prefer-object-spread": true,
        "prefer-readonly": true,
        "prefer-while": true,
        "promise-function-async": true,
        "restrict-plus-operands": {
            "severity": "warning"
        },
        "return-undefined": false,
        "static-this": {
            "severity": "warning"
        },
        "strict-type-predicates": false,
        "type-literal-delimiter": true,
        "unnecessary-bind": {
            "severity": "warning"
        },

        "prettier": true,

        "no-constant-condition": [
            true,
            {
                "checkLoops": false
            }
        ],
        "no-control-regex": true,
        "no-duplicate-case": true,
        "no-empty-character-class": true,
        "no-ex-assign": true,
        "no-extra-boolean-cast": true,
        "no-extra-semi": true,
        "no-inner-declarations": [true, "functions"],
        "no-invalid-regexp": [
            true,
            {
                "allowConstructorFlags": []
            }
        ],
        "ter-no-proto": true,
        "ter-no-script-url": true,
        "ter-no-self-compare": true,
        "ter-no-sparse-arrays": true,
        "ter-prefer-arrow-callback": [
            true,
            {
                "allowNamedFunctions": true,
                "allowUnboundThis": true
            }
        ],

        "no-redundant-jsdoc": true,
        "valid-jsdoc": [
            true,
            {
                "matchDescription": ".+",
                "prefer": {
                    "arg": "param",
                    "desc": "description",
                    "exception": "throws",
                    "func": "function",
                    "readOnly": "readonly",
                    "returns": "return",
                    "throw": "throws"
                },
                "requireParamDescription": true,
                "requireParamType": false,
                "requireReturn": false,
                "requireReturnDescription": true,
                "requireReturnType": false
            }
        ],
        "valid-typeof": true,

        "jsx-alignment": true,
        "jsx-ban-elements": [true, []],
        "jsx-ban-props": [true, []],
        "jsx-boolean-value": false,
        "jsx-curly-spacing": false,
        "jsx-equals-spacing": false,
        "jsx-key": false,
        "jsx-no-bind": true,
        "jsx-no-lambda": true,
        "jsx-no-multiline-js": false,
        "jsx-no-string-ref": true,
        "jsx-use-translation-function": false,
        "jsx-self-close": true,
        "jsx-space-before-trailing-slash": false,
        "jsx-wrap-multiline": false,

        "early-exit": [
            true,
            {
                "max-length": 4,
                "ignore-constructor": true
            }
        ],
        "no-accessor-recursion": true,
        "no-collapsible-if": true,
        "no-else-after-return": [true, "allow-else-if"],
        "no-unnecessary-else": true,
        "no-unused": true,
        "no-var-before-return": [true, "allow-destructuring"],
        "prefer-const-enum": false
    },
    "rulesDirectory": ["tslint-consistent-codestyle", "tslint-plugin-prettier"]
}
